<idea-plugin>
    <id>falcon-jetbrains-themes</id>
    <version>3.0.0</version>
    <name>Falcon Relax Eyes Light Theme</name>
    <vendor email="xiaoan.pan@qq.com" url="https://github.com/panxiaoan">Panxiaoan</vendor>
    <category>UI</category>

    <!-- 最低支持 IDEA 版本：2023.2 https://plugins.jetbrains.com/docs/intellij/build-number-ranges.html#earlier-versions -->
    <idea-version since-build="232"/>

    <depends>com.intellij.modules.platform</depends>

    <!--<applicationListeners>
        <listener class="com.falcon.jetbrains.themes.FalconThemesChangeListener"
                  topic="com.intellij.ide.ui.LafManagerListener"/>
    </applicationListeners>-->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Light Theme -->
        <themeProvider id="falcon-relax-light-celadon" path="/themes/light-celadon/relax-light-celadon.theme.json"/>
        <themeProvider id="falcon-relax-light-sage-green" path="/themes/light-sage-green/relax-light-sage-green.theme.json"/>
        <themeProvider id="falcon-relax-light-green" path="/themes/light-green/relax-light-green.theme.json"/>
        <themeProvider id="falcon-relax-light-green-contrast" path="/themes/light-green/relax-light-green-contrast.theme.json"/>
        <themeProvider id="falcon-relax-light-grey" path="/themes/light-grey/relax-light-grey.theme.json"/>
        <themeProvider id="falcon-relax-light-pink" path="/themes/light-pink/relax-light-pink.theme.json"/>
        <themeProvider id="falcon-relax-light-yellow" path="/themes/light-yellow/relax-light-yellow.theme.json"/>
        <themeProvider id="falcon-relax-light-buff" path="/themes/light-buff/relax-light-buff.theme.json"/>

        <!-- Dark Theme -->
        <themeProvider id="falcon-relax-dark" path="/themes/dark/relax-dark.theme.json"/>
        <themeProvider id="falcon-relax-dark-darcula" path="/themes/dark-darcula/relax-dark-darcula.theme.json"/>
        <themeProvider id="falcon-relax-dark-blue" path="/themes/dark-blue/relax-dark-blue.theme.json"/>
        <themeProvider id="falcon-relax-dark-green" path="/themes/dark-green/relax-dark-green.theme.json"/>
        <themeProvider id="falcon-relax-dark-violet" path="/themes/dark-violet/relax-dark-violet.theme.json"/>
        <themeProvider id="falcon-relax-dark-coffee" path="/themes/dark-coffee/relax-dark-coffee.theme.json"/>

        <!-- Color Scheme: using IDEA default color scheme -->
        <bundledColorScheme id="falcon-relax-light-celadon-scheme" path="/schemes/relax-light-celadon"/>
        <bundledColorScheme id="falcon-relax-light-green-scheme" path="/schemes/relax-light-green"/>
        <bundledColorScheme id="falcon-relax-light-green-contrast-scheme" path="/schemes/relax-light-green-contrast"/>
        <bundledColorScheme id="falcon-relax-light-grey-scheme" path="/schemes/relax-light-grey"/>
        <bundledColorScheme id="falcon-relax-light-pink-scheme" path="/schemes/relax-light-pink"/>
        <bundledColorScheme id="falcon-relax-light-yellow-scheme" path="/schemes/relax-light-yellow"/>
    </extensions>

</idea-plugin>